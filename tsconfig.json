{
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist/out-tsc",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": false,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "module": "ESNext",
        "target": "ESNext",
        "allowJs": true,
        "lib": [
            "ESNext",
            "dom"
        ]
    },
    "files": [
        "src/app.ts"
    ]
}
